<h1>Store Name: <%= @store.name %></h1>

<h2>Current brands included in store inventory:</h2>
<h5>Click on brand names to learn more:</h5>
<% if @store.brands.any? %>
  <% @store.brands.each do |brand| %>
    <ul>
      <li><a href="/brands/<%= brand.id %>"><%= brand.name %></a> | price: <%= brand.price %></li>
    </ul>
  <% end %>
<% else %>
  <p>There are no brands in the inventory yet.</p>
<%end%>


<h4>Add brands to this store:</h4>
<form action="/stores/<%= @store.id %>/brands" method="post">
  <label for="brand_id"></label>
  <select id='brand_id' name='brand_id' type='text'>
    <% @brands.each() do |brand| %>
      <option value="<%= brand.id()%>"> <%= brand.name %> </option>
    <% end %>
  </select>
  <button type="submit">Add Brand</button>
</form>

<a href="/store_edit/<%= @store.id %>">Click here to edit this store.</a>

<footer>
  <hr>
  <p><a href="/">Return home.</a></p>
</footer>
